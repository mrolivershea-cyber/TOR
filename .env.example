# Tor Proxy Pool Configuration

# Application
APP_NAME=Tor Proxy Pool
DEBUG=false

# Tor Pool
TOR_POOL_SIZE=50
TOR_BASE_SOCKS_PORT=30000
TOR_BASE_CTRL_PORT=40000

# Security
API_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256

# Database
POSTGRES_DB=torproxy
POSTGRES_USER=torproxy
POSTGRES_PASSWORD=CHANGE_ME

# Redis
REDIS_URL=redis://redis:6379/0

# Monitoring
GRAFANA_PASSWORD=CHANGE_ME

# Health Check
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
MAX_FAILED_CHECKS=3

# Auto Rotation
AUTO_ROTATE_ENABLED=true
AUTO_ROTATE_INTERVAL=600