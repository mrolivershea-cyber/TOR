# Tor Proxy Pool Configuration

# Application
APP_NAME=Tor Proxy Pool
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
API_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin credentials (CHANGE ON FIRST LOGIN)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
REQUIRE_PASSWORD_CHANGE=true

# 2FA
ENABLE_2FA=true

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=torproxy
POSTGRES_USER=torproxy
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Tor Pool
TOR_POOL_SIZE=50
TOR_BASE_SOCKS_PORT=30000
TOR_BASE_CTRL_PORT=40000
TOR_DATA_DIR=/var/lib/tor-pool

# Tor Configuration
TOR_COUNTRIES=
TOR_STRICT_NODES=true

# Auto Rotation
AUTO_ROTATE_ENABLED=true
AUTO_ROTATE_INTERVAL=600

# Health Check
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
MAX_FAILED_CHECKS=3

# Firewall
FIREWALL_BACKEND=auto

# Whitelist (comma-separated IPs or CIDR ranges)
PANEL_WHITELIST=
SOCKS_WHITELIST=

# TLS
TLS_ENABLE=true
DOMAIN=
SSL_CERT_PATH=
SSL_KEY_PATH=

# Export Tokens
EXPORT_TOKEN_TTL_MIN=60
EXPORT_TOKEN_IP_BIND=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/tor-proxy-pool/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# Alerts - Email
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_TO=
ALERT_EMAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# Alerts - Telegram
ALERT_TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Alert thresholds
ALERT_NODE_DOWN_THRESHOLD=0.2
ALERT_TLS_EXPIRY_DAYS=30

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Brute force protection
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15